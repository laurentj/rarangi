<?xml version="1.0" encoding="UTF-8"?>
<dao xmlns="http://jelix.org/ns/dao/1.0">
    <datasources>
        <primarytable name="classes" realname="classes" primarykey="name,project_id" />
    </datasources>
    <record>
        <property name="name" fieldname="name" datatype="string" required="true" maxlength="100"/>
        <property name="project_id" fieldname="project_id" datatype="int" required="true"/>
        <property name="file_id" fieldname="file_id" datatype="int" required="true"/>
        <property name="linenumber" fieldname="linenumber" datatype="int" required="true"/>
        <property name="mother_class" fieldname="mother_class" datatype="string" default="" maxlength="100"/>
    </record>
    <factory>
        <method name="deleteByProject" type="delete">
            <parameter name="project" />
            <conditions>
                <eq property="project_id" expr="$project" />
            </conditions>
        </method>
    </factory>
</dao>
